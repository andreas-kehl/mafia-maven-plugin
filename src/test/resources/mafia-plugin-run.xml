<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>nl.sijpesteijn.testing.fitnesse.plugins</groupId>
    <artifactId>mafia-maven-plugin</artifactId>
    <packaging>pom</packaging>
    <version>1.0.0-SNAPSHOT</version>
    <name>mafia-maven-plugin Maven Mojo</name>
    <description>A maven plugin for FitNesse</description>
    
    
	<build>
		<plugins>
            <plugin>
                <artifactId>mafia-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>run-tests</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <port>9091</port>
                    <fitnesseOutputDirectory>mafiaTestResults</fitnesseOutputDirectory>
                    <wikiRoot>${basedir}/target</wikiRoot>
                    <nameRootPage>FitNesseRoot</nameRootPage>
                    <stopTestsOnFailure>true</stopTestsOnFailure>
                    <stopTestsOnIgnore>true</stopTestsOnIgnore>
                    <stopTestsOnException>true</stopTestsOnException>
                    <stopTestsOnWrong>true</stopTestsOnWrong>
                    <tests>
                        <test>FrontPage.BuyMilk</test>
                        <test>FrontPage.BuyMilk1</test>
                    </tests>
                    <suites>
                        <suite>FrontPage.BuyMilkSuite</suite>
                    </suites>
                </configuration>
            </plugin>
		</plugins>
	</build>
</project>
