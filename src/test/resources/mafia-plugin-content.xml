<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>nl.sijpesteijn.testing.fitnesse.plugins</groupId>
    <artifactId>mafia-maven-plugin</artifactId>
    <packaging>pom</packaging>
    <version>1.0.0-SNAPSHOT</version>
    <name>mafia-maven-plugin Maven Mojo</name>
    <description>A maven plugin for FitNesse</description>
    
    <dependencies>
        <dependency>
            <artifactId>log4j</artifactId>
            <groupId>log4j</groupId>
            <version>1.2.15</version>
        </dependency>
        <dependency>
            <artifactId>junit</artifactId>
            <groupId>junit</groupId>
            <version>4.8.2</version>
        </dependency>
    </dependencies>

	<build>
		<plugins>
			<plugin>
				<artifactId>mafia-maven-plugin</artifactId>
				<executions>
				    <execution>
				        <goals>
				            <goal>content</goal>
				        </goals>
				    </execution>
				</executions>
				<configuration>
				    <statics>
				        <static>!define TEST_SYSTEM {slim}</static>
				        <!-- When you use the default generated fitnesse layout you should use
				            your own fixture package
				        <static>!define fixturePackage {nl.yourcompany.application.testing.fixtures}</static>
				         -->
				        <static>!define fixturePackage {fitnesse.slim.test}</static>
				    </statics>
				    <resources>
				        <resource>${basedir}/src/main/resources</resource>
				    </resources>
				    <targets>
				        <target>./domain</target>
				    </targets>
				    <excludeDependencies>
				        <dependency>
				            <artifactId>log4j</artifactId>
				            <groupId>log4j</groupId>
				            <version>1.2.15</version>
				        </dependency>
				    </excludeDependencies>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>