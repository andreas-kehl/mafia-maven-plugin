<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>nl.sijpesteijn.testing.fitnesse.plugins</groupId>
    <artifactId>mafia-maven-plugin</artifactId>
    <packaging>pom</packaging>
    <version>1.0.0-SNAPSHOT</version>
    <name>mafia-maven-plugin Maven Mojo</name>
    <description>A maven plugin for FitNesse</description>

	<build>
		<plugins>
			<plugin>
				<artifactId>mafia-maven-plugin</artifactId>
				<executions>
				    <execution>
				        <goals>
				            <goal>content</goal>
				        </goals>
				    </execution>
				</executions>
				<configuration>
				    <statics>
				        <static>!define TEST_SYSTEM {slim}</static>
				    </statics>
				    <resources>
				        <resource>./src/main/resources</resource>
				    </resources>
				    <targets>
				        <target>./domain</target>
				    </targets>
				    <excludeDependencies>
				        <dependency>
				            <artifactId>com.example</artifactId>
				            <groupId>group1</groupId>
				            <version>1</version>
				            <type>war</type>
				        </dependency>
                        <dependency>
                            <artifactId>com.example</artifactId>
                            <groupId>group2</groupId>
                            <version>1</version>
                        </dependency>
				    </excludeDependencies>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>